{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    // "indent"                 : [0, "tab"],
    "jsx-quotes"             : [2, "prefer-single"],
    "max-len"                : [2, 120, 2],
    "object-curly-spacing"   : [2, "always"],
    "key-spacing"            : 0,
    "react/prop-types"       : 1,
    "eqeqeq"                 : 1,
    "react/jsx-indent-props" : 1,
    "no-return-assign"       : 2
  }
}